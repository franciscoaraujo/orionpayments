					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{gateway_url}}/v1/payments",
					"host": [
						"{{gateway_url}}"
					],
					"path": [
						"v1",
						"payments"
					]
				}
			},
			"response": []
		},
		{
